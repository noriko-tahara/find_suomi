<div class="relative items-center w-5/6 px-3 py-3 mb-1 mx-auto border border-slate-500 md:px-12 lg:px-24 max-w-7xl">
    <div class="w-full max-w-lg p-2 text-left lg:mx-auto rounded-xl">
      <% if current_user.own?(review) %>
        <ul class='crud-menu-btn list-inline float-right'>
          <li class="list-inline-item">
            <%= link_to edit_review_path(review) do %>
              <svg class="h-8 w-8 text-gray-500"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4" />  <line x1="13.5" y1="6.5" x2="17.5" y2="10.5" /></svg>
            <% end %>
          </li>
          <li class="list-inline-item">
            <%= link_to review_path(review), data: {turbo_method: :delete, turbo_confirm: t('defaults.message.confirm_delete')} do %>
              <svg class="h-8 w-8 text-gray-500"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <line x1="4" y1="7" x2="20" y2="7" />  <line x1="10" y1="11" x2="10" y2="17" />  <line x1="14" y1="11" x2="14" y2="17" />  <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />  <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
            <% end %>
          </li>
        </ul>
      <% end%>
        <p class="mx-auto text-base text-sm leading-relaxed text-gray-500">
          <%= review.body %>
        </p>
        <h2 class="mt-4 text-xs font-semibold tracking-widest text-blue-500">
          <%= review.user.name %>
          <span class="text-xs text-gray-200"><%= review.updated_at.strftime('%Y/%m/%d %H:%M')%></span>
        </h2>
        <svg class="h-6 w-6 text-gray-500"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
    </div>
</div>
