<div class="p-2 w-full">
  <div class="mx-auto">
    <%= form_with model: review, url: [facility, review], local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :body, class: 'static left-1 font-semibold' %>
      <%= f.text_area :body,
            class: 'w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-gray-500 focus:bg-white focus:ring-2 focus:ring-gray-200 h-32 text-base outline-none text-gray-700 py-1 px-3 mt-3 resize-none leading-6 transition-colors duration-200 ease-in-out',
            row: 4, placeholder: Review.human_attribute_name(:body) %>
      <div class="mt-3 mb-3", data-controller="preview-image">
        <%= f.label :review_image, class: 'font-semibold' %>
        <%= f.file_field :review_image, accept: 'image/*', data: { action: 'change->preview-image#preview' }, class: 'file-input file-input-bordered file-input-sm w-full max-w-xs mt-3'%>
        <%= f.hidden_field :image_cache %>
      </div>
      <div class="mt-5 mb-5">
        <%= image_tag review.review_image.url, id: 'preview', size: '150x150' %>
      </div>
      <%= f.submit t('defaults.post'), class: 'btn btn-primary btn-sm flex mx-auto max-w-md items-center justify-center text-center px-10 mt-10' %>
    <% end %>
  </div>
</div>