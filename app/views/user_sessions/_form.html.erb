<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <%= form_with(model: user, url: login_path, local: true) do |f| %>
    <div class="flex flex-col">
      <div class="my-3">
        <%= f.label :email, User.human_attribute_name(:email), class: 'my-1 block text-sm font-medium text-gray-950' %>
        <%= f.text_field :email, id: 'email', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-400 focus:ring focus:ring-gray-200 focus:ring-opacity-50', autocomplete: 'email' %>
      </div>
      <div class="my-3">
        <%= f.label :password, User.human_attribute_name(:password), class: 'my-1 block text-sm font-medium text-gray-950'  %>
        <%= f.password_field :password, id: 'password', class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-400 focus:ring focus:ring-gray-200 focus:ring-opacity-50', autocomplete: 'off' %>
        <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: 'mt-2 label-text-alt link text-gray-500' %>
      </div>
    </div>
    <div class="actions mt-5 text-center normal-case">
      <%= f.submit t('defaults.login'), class: 'btn btn-wide btn-neutral text-white' %>
    </div>
  <% end %>
</div>