<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <%= form_with(model: user, url: login_path, local: true) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, User.human_attribute_name(:email),class: 'my-1 text-base' %>
      <%= f.text_field :email, id: 'email', class: 'input input-bordered', autocomplete: 'email' %>
      <%= f.label :password, User.human_attribute_name(:password), class: 'my-1 text-base'  %>
      <%= f.password_field :password, id: 'password', class: 'input input-bordered', autocomplete: 'off' %>
      <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: 'mt-1 label-text-alt link link-hover text-gray-500' %>
    </div>
    <div class="actions mt-5 text-center">
      <%= f.submit t('defaults.login'), class: 'btn btn-wide btn-primary' %>
    </div>
  <% end %>
</div>