<div class="w-full max-w-xs space-y-4 mt-4">
  <%= form_with model: @search_facility_form, scope: :q, url: facilities_path, method: :get do |f| %>
    <%= f.select :genre_id, Genre.pluck(:name, :id), { include_blank: 'ジャンル' }, class: 'select select-bordered w-full max-w-xs mt-3' %>
    <%= f.select :prefecture_id, Prefecture.pluck(:name, :id), { include_blank: '都道府県' }, class: 'select select-bordered w-full max-w-xs mt-3' %>
    <div class="text-center">
      <%= f.submit '検索', name: nil, class: 'btn btn-neutral btn-sm mt-2' %>
    </div>
  <% end %>
</div>