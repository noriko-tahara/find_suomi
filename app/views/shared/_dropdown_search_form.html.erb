<%= form_with model: @search_facility_form, scope: :q, url: facilities_path, method: :get do |f| %>
  <div class="m-4">
    <%= f.select :genre_id, Genre.pluck(:name, :id), { include_blank: 'ジャンル' }, class: 'select select-info mb-2' %>
  </div>
  <div class="m-4">
    <%= f.select :prefecture_id, Prefecture.pluck(:name, :id), { include_blank: '都道府県' }, class: 'select select-info mb-2' %>
  </div>
  <div class="text-center">
    <%= f.submit '検索', name: nil, class: 'btn btn-sm btn-outline' %>
  </div>
<% end %>