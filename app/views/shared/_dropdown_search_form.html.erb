<div class="w-full max-w-xs space-y-4 my-8">
  <%= form_with model: @search_facility_form, scope: :q, url: facilities_path, method: :get do |f| %>
    <%= f.select :genre_id, Genre.pluck(:name, :id), { include_blank: 'ジャンル' }, class: 'select select-bordered text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 w-full max-w-xs mt-3' %>
    <%= f.select :prefecture_id, Prefecture.selected_prefectures.pluck(:name, :id), { include_blank: '都道府県' }, class: 'select select-bordered text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 w-full max-w-xs mt-3' %>
    <div class="text-center mt-4">
      <%= f.submit '検索', name: nil, class: 'btn btn-neutral btn-sm text-white' %>
    </div>
  <% end %>
</div>