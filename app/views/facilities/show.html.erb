<div class="flex flex-col">
  <div class="card mx-auto max-w-screen-md mt-20 mb-10 my-4 md:my-6 border border-slate-500">
    <div class="py-8 px-10 sm:px-8 max-w-3xl md:rounded-3xl md:px-20">
      <h1 class="font-semibold text-center text-2xl my-2"><%= @facility.name %></h1>
      <span class="absolute top-4 right-4 w-10 h-10 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
        <% if logged_in? %>
          <%= render 'bookmark_button', { facility: @facility } %>
        <% else %>
          <%= render 'before_login_bookmark' %>
        <% end %>
      </span>
      <!-- ジャンル表示 -->
      <h2 class="my-4 pr-5 text-right">
        <% @facility.genres.each do |genre| %>
          <span class="inline-flex items-center rounded-md bg-gray-50 me-1 px-2.5 py-0.5 text-sm font-medium text-gray-600 ring-1 ring-inset ring-gray-400" >
            <%= genre.name %>
          </span>
        <% end %>
      </h2>
      <!-- 施設情報詳細 -->
      <table class="table mb-8 mt-5 mx-auto">
        <tbody class="w-11/12 m-auto">
          <tr>
            <td class="text-normal font-medium font-semibold font-semibold leading-5 text-gray-900"><%= t(Facility.human_attribute_name(:description)) %></td>
            <td class="mt-1 text-sm font-light leading-5 text-gray-900 sm:col-span-2 sm:mt-0"><%= @facility.description %></td>
          </tr>
          <tr>
            <td class="text-normal font-medium font-semibold leading-tight text-gray-900"><%= t(Facility.human_attribute_name(:opening_hour)) %></td>
            <td class="mt-1 text-sm font-light leading-tight text-gray-900 sm:col-span-2 sm:mt-0"><%= @facility.opening_hour %></td>
          </tr>
          <tr>
            <td class="text-normal font-medium font-semibold leading-tight text-gray-900"><%= t(Facility.human_attribute_name(:closed_on)) %></td>
            <td class="mt-1 text-sm font-light leading-tight text-gray-900 sm:col-span-2 sm:mt-0"><%= @facility.closed_on %></td>
          </tr>
          <tr>
            <td class="text-normal font-medium font-semibold leading-tight text-gray-900"><%= t(Facility.human_attribute_name(:website)) %></td>
            <td class="mt-1 text-sm font-light leading-tight text-blue-700 sm:col-span-2 sm:mt-0">
              <%= link_to @facility.website, @facility.website, target: "_blank", rel: "noopener" %>
            </td>
          </tr>
          <tr>
            <td class="text-normal font-medium font-semibold leading-tight text-gray-900"><%= t(Facility.human_attribute_name(:address)) %></td>
            <td class="mt-1 text-sm font-light leading-tight text-gray-900 sm:col-span-2 sm:mt-0"><%= @facility.address %></td>
          </tr>
        </tbody>
      </table>
      <div class="mx-auto px-1 py-1 border sm:px-1 max-w-3xl items-center">
        <div id="map"></div>
      </div>
    </div>
  </div>

  <!-- 口コミ表示 -->
  <h2 class="text-center text-xl font-semibold"><%= t('activerecord.models.review') %></h2>
  <div class="mt-8 mb-14">
    <% if logged_in? %>
      <!-- 口コミ一覧 -->
      <%= render 'reviews/reviews', { reviews: @reviews } %>

      <!-- 口コミ投稿 -->
      <button class="flex mx-auto mt-10 mb-5" >
        <%= link_to t('reviews.post_review'),  new_facility_review_path(@facility), class: 'btn btn-wide h-min bg-transparent border-gray-800 hover:bg-gray-100 focus:ring focus:ring-gray-900' %>
      </button>
    <% else %>
      <div class="flex justify-center text-center mx-auto">
        <%= link_to login_path, class: 'btn btn-neutral btn-wide h-min text-white' do %>
          <p><%= t('reviews.login_to_post_reviews') %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Googleマップ表示用の Javascript -->
<script>
  function initMap(){
    // 地図の位置情報(緯度・経度)を取得
    let mapPosition = {lat: <%= @facility.latitude || 0 %> , lng: <%= @facility.longitude || 0 %> };
    let map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: mapPosition
    });
    let transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    let contentString = '住所<%= @facility.address %>';
    let infowindow = new google.maps.InfoWindow({
      content: contentString
    });

    let marker = new google.maps.Marker({
      position: mapPosition,
      map: map,
      title: contentString
    });

    marker.addListener('click', function(){
      infowindow.open(map, marker);
    });
  }
</script>

<script async defer
src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
</script>

<style>
  #map {
    height: 300px;
    width: 100%;
  }
</style>


